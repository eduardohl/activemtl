<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/suggestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/suggest" />

        <TextView
            android:id="@+id/lblEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="20dp"
            android:text="@string/event_type"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextName"
            android:layout_below="@+id/expandableListView1"
            android:layout_marginTop="20dp"
            android:text="@string/event_title"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textDescription"
            android:layout_below="@+id/lblEventName"
            android:ems="10"
            android:hint="@string/courts_name" />

        <ExpandableListView
            android:id="@+id/expandableListView1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lblEventName"
            android:layout_below="@+id/lblEventType" >
        </ExpandableListView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lblEventType"
            android:layout_below="@+id/editTextName"
            android:layout_marginTop="20dp"
            android:text="@string/event_description"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/textDescription"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:ems="10"
            android:hint="@string/event_description"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/generic_photo" />

    </RelativeLayout>

</ScrollView>