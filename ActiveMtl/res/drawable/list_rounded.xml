<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item>
         <layer-list>
            <item>
				<shape android:shape="rectangle" >
				    <corners android:radius="5dp" />
				
				    <gradient
				        android:angle="90"
				        android:endColor="#FEFEFE"
				        android:startColor="#EEEEEE" />
				
				    <stroke
				        android:width="1dp"
				        android:color="#c5c5c5" />

		 			<padding
		            	android:left="10dp"
		            	android:right="10dp"
		            	android:top="10dp"
		            	android:bottom="10dp" />				    
					    				    				    
				</shape>				    
				
			</item>
	 		<item>
				<bitmap android:gravity="center|right" android:src="@drawable/ic_down_arrow" />
			</item>
		 </layer-list>
	</item>
</selector>